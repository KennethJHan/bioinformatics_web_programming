<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>돌아가는 DNA</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>
    <body>
        <h2>Rotating DNA</h2>
        <img id="dna_image" src="dna_rotate_1.gif">
        <br>
        <button id="dna_button">click</button>

        <script>
            var image_src = "";
            var new_image_src = "";
            $(document).ready(function(){
                $("#dna_button").click(function(){
                    image_src = $("#dna_image").attr("src");
                    if(image_src == "dna_rotate_1.gif") {
                        new_image_src = "dna_rotate_2.gif";
                    } else {
                        new_image_src = "dna_rotate_1.gif";
                    }
                    $("#dna_image").attr("src",new_image_src);
                });
            });
        </script>
    </body>
</html>
